<div class="container">
  <div class="row">
  	<%= render 'books/list', user: current_user, book: @book %>
  	<div class="col-lg-9">
  	  <h2>Users</h2>
  	  <table class="table table-hover">
  	  	<tr>
  	  	<th>image</th>
  	  	<th>name</th>
  	  	<th colspan="3"></th>
  	  	</tr>
  	  	<tr>
  	  	<% @users.each do |user| %>
        <th><%= attachment_image_tag @user, :profile_image_id, format:'jpeg', fallback: "no_image.jpg", size:'35x35' %></th>
        <th><%= user.name %></th>
        <th><%= link_to "Show", user_path(user.id) %></th>
        </tr>
        <% end %>
  	  </table>
  	</div>
  </div>
</div>