<div class="container">
  <div class="row">
  	<%= render 'books/list', user: current_user, book: @book %>
  	<div class="col-lg-9">
  	  <h2>Users</h2>
  	  <table class="table">
  	  	<thead>
          <tr>
  	  	    <th>image</th>
  	  	    <th>name</th>
  	  	    <th colspan="3"></th>
  	  	  </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
  	  	  <tr>
            <td><%= attachment_image_tag user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:'35x35' %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
  	  </table>
  	</div>
  </div>
</div>