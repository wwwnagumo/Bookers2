<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:'70x70' %>
  <table class="table table-borderless">
  	<tr>
  	  <th>name</th>
  	  <th><%= user.name %></th>
  	</tr>
  	<tr>
  	  <th>introduction</th>
  	  <th><%= user.introduction %></th>
  	</tr>
  </table>
    <% if user.id == current_user.id %>
    	<%= link_to edit_user_path(user) do %>
      <button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
      <% end %>
    <% else %>
      <%= link_to user_path(current_user) do %>
      <button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
      <% end %>
    <% end %>
  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title, class:'form-control' %><br />

    <%= f.label :Opinion %><br />
    <%= f.text_area :body, class:'form-control' %><br />

    <button type="submit" class="btn btn-primary btn-block">Create Book</button>
  <% end %>
</div>