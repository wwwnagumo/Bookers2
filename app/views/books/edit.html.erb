<div class="container">
  <div class="row">
    <div class="col-lg-3">
    </div>
      <div class="col-lg-6">
    	<h2>Editing book</h2>
      <%= form_for(@book) do |f| %>
        <%= f.label :Title %><br />
        <%= f.text_field :title, class: 'form-control' %><br />

        <%= f.label :Opinion %><br />
        <%= f.text_area :body, class: 'form-control' %><br />

        <button type="submit" class="btn btn-primary btn-block">Update Book</button><br />
      <% end %>
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
      </div>
  </div>
</div>