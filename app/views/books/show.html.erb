<div class="container">
  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
  <% end %>
  <div class="row">
  	<%= render 'books/list', user: @user, book: @book_new %>
  	<div class="col-xs-9">
  	  <h2>Book detail</h2>
  	  <table class="table">
  	  	<tr>
  	  	<th><%= link_to user_path(@user) do %><%= attachment_image_tag @user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:'35x35' %><br><%= @book.user.name %><% end %></th>
  	  	<th><%= link_to @book.title, book_path(@book) %></th>
  	  	<th><%= @book.body %></th>
        <% if @book.user == current_user %>
        <th><%= link_to "Edit", edit_book_path, class: "btn btn-success btn-xs" %></th>
        <th><%= link_to "Destroy", book_path, class: "btn btn-danger btn-xs", method: :delete, "data-confirm" => "本当に消しますか？" %></th>
        <% end %>
  	    </tr>
  	  </table>
  	</div>
  </div>
</div>