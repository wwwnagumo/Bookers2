<div class="container">
  <div class="row">
  	<%= render 'books/list', user: current_user, book: @book_new %>
  	<div class="col-lg-9">
  	  <h2>Book detail</h2>
  	  <table class="table table-hover">
  	  	<tr>
  	  	<th><%= link_to user_path(@user.id) do %><%= @book.user.name %><% end %></th>
  	  	<th><%= link_to @book.title, book_path(@book) %></th>
  	  	<th><%= @book.body %></th>
  	    </tr>
  	  </table>
  	</div>
  </div>
</div>